{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": ["airbnb-base"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "Comlink": "readonly",
      "immer": "readonly",
      "importScripts": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": ["error", "never"],
      "quotes": [2, "single", { "avoidEscape": true }],
      "no-param-reassign": ["error", { "props": false }]
    }
  }
  